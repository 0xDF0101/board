<%- include('../partials/header', {title:post.title}) %>
    <h1>게시글 수정</h1>
    <br>
    <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
        <input type="text" name="title" value="<%= post.title%>" style="width:100%" required /><br><br>
        <textarea name="content" class="big-textarea" required><%= post.content%></textarea>
        <br>
        <br>
        <div class="d-flex gap-2">
            <button class="btn btn-sm btn-danger" type="submit">수정 완료</button>
            <a href="/posts/<%= post._id %>" class="btn btn-sm btn-outline-secondary">취소</a>

        </div>
    </form>

    <%- include('../partials/footer') %>