<%- include('../partials/header', {title:'로그인'}) %>

    <h1>로그인</h1>

    <form action="/users/login" method="POST">
        <div class="mb-3">
            <label for="userId" class="form-label">아이디</label>
            <input type="text" id="userId" name="userId" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="userPw" class="form-label">비밀번호</label>
            <input type="password" id="userPw" name="userPw" class="form-control" required />
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-primary me-2">로그인</button>
            <a href="/users/register" class="btn btn-outline-primary me-auto">회원가입</a>
            <a href="/posts" class="btn btn-secondary">게시판</a>
        </div>
    </form>


    <%- include('../partials/footer') %>